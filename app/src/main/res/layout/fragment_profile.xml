<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="25dp"
    android:background="#f5f6fa"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:id="@+id/faceplamFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorwhite"
        android:orientation="vertical">

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_profile_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="2.5"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/details_page_header_background">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/imageRinku"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="15dp"
                            android:elevation="3dp"
                            android:src="@drawable/rinku"
                            app:civ_border_color="#fff"
                            app:civ_border_width="3dp" />

                        <RatingBar
                            android:id="@+id/rating"
                            style="@android:style/Widget.DeviceDefault.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/imageRinku"
                            android:layout_alignParentLeft="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="10dp"
                            android:rating="5"
                            android:theme="@style/RateUs" />

                        <TextView
                            android:id="@+id/nametxtRating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/imageRinku"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="10dp"
                            android:layout_toRightOf="@+id/rating"
                            android:fontFamily="@font/montserrat_extrabold"
                            android:text="(4.5)"
                            android:textColor="#fff"
                            android:textSize="12sp" />

                        <TextView

                            android:id="@+id/nametxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="30dp"
                            android:layout_toRightOf="@+id/imageRinku"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Amit Kumar"
                            android:textColor="#fff"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/nametxt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nametxt"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_marginTop="7dp"
                            android:layout_toRightOf="@id/imageRinku"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Vedic Astrologer"
                            android:textColor="#fff"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/nametxt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/nametxt1"
                            android:layout_centerHorizontal="true"
                            android:layout_marginLeft="25dp"
                            android:layout_toRightOf="@id/imageRinku"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Number Loger"
                            android:textColor="#fff"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="60dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"
                            android:src="@drawable/online_icon"></ImageView>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_astro"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/relateProfile1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/locImage"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/ic_location_on_black_24dp"></ImageView>

                                <TextView
                                    android:id="@+id/nametxtLoc"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImage"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="Delhi"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_astro"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/locImageEx"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/ic_experience"></ImageView>

                                <TextView
                                    android:id="@+id/nametxtLocEx"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageEx"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="5 Years"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_astro"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/timeRelative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/locImageTime"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/watch_icon"></ImageView>

                                <TextView
                                    android:id="@+id/nametxtLocTime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageTime"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="9AM-5PM"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp" />

                                <ImageView
                                    android:id="@+id/showLocTimelist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageTime"
                                    android:layout_alignParentEnd="true"
                                    android:layout_toRightOf="@id/nametxtLocTime"
                                    android:src="@drawable/ic_baseline_arrow_drop_down"></ImageView>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_astro"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/locImageRs"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/rupees_icon"></ImageView>

                                <TextView
                                    android:id="@+id/nametxtLocRs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageRs"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="15/Mint"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp" />

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_astro"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/languageRelative"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/locImageLang"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/language_icon"></ImageView>

                                <TextView
                                    android:id="@+id/nametxtLang"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageLang"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="English"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp" />

                                <ImageView
                                    android:id="@+id/showLocLanglist"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageLang"
                                    android:layout_alignParentEnd="true"
                                    android:layout_toRightOf="@id/nametxtLang"
                                    android:src="@drawable/ic_baseline_arrow_drop_down"></ImageView>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:layout_weight="1"
                            android:background="@drawable/back_astro"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/locImageNum"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="6dp"
                                    android:src="@drawable/ic_numerologist"></ImageView>

                                <TextView
                                    android:id="@+id/nametxtNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/locImageNum"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="25dp"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/montserrat_regular"
                                    android:text="Numerology"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12dp" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/details_page_pfofile_contant_background"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/details_page_profile_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/details_page_profile_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="Profile"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/astroProfileName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:layout_toRightOf="@+id/details_page_profile_icon"
                            android:fontFamily="@font/montserrat_regular"
                            android:textColor="#919192"
                            android:textSize="10dp" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/face_instraction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/face_reading_instraction"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <LinearLayout
                        android:id="@+id/linear_layout_face"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="50dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/Face_image_upload_choose"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_marginBottom="5dp"
                            android:src="@drawable/ic_facereading_image" />

                        <Button

                            android:id="@+id/upload_face_image_txt_choose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/custtom_button"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Upload Face Image"
                            android:textColor="@color/colorwhite"
                            android:textSize="15sp"></Button>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/Palm_Instruction"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:text="@string/plam_reading_instraction"
                            android:textColor="@color/colorPrimary"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linear_layout_palm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Palm_image_upload_choose"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_palm_image"></ImageView>

                        <Button
                            android:id="@+id/upload_palm_image_txt_choose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="50dp"
                            android:background="@drawable/custtom_button"
                            android:fontFamily="@font/montserrat_bold"
                            android:gravity="center"
                            android:text="Upload Palm Image"
                            android:textColor="@color/colorwhite"
                            android:textSize="15sp"></Button>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/call_button_1" />

        <ImageView
            android:id="@+id/chatAstro"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="2"
            android:background="@drawable/chat_button1" />
    </LinearLayout>


</FrameLayout>