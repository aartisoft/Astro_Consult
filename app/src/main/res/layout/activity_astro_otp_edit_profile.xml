<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="3dp"
    tools:context=".AstroOtpEditProfile">

    <TextView

        android:id="@+id/AstromainOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bangla_sangamold"
        android:text="OTP Verification"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/AstronextOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AstromainOtp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/bangla_sangamold"
        android:gravity="center_horizontal|center_vertical"
        android:justificationMode="inter_word"
        android:text="@string/we_will_send_you_one_time_password_for_your_mobile_no_verification"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/AstroverifyOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/AstronextOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold">
    </TextView>

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:layout_centerInParent="true"
        android:id="@+id/Astro_txt_pin_entry_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinAnimationType="popIn" />

