    <TextView

        android:id="@+id/mainOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bangla_sangamold"
        android:text="OTP Verification"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/nextOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainOtp"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/bangla_sangamold"
        android:gravity="center_horizontal|center_vertical"
        android:justificationMode="inter_word"
        android:text="@string/we_will_send_you_one_time_password_for_your_mobile_no_verification"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/verifyOtp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nextOtp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"></TextView>

    <com.alimuzaffar.lib.pin.PinEntryEditText
        android:layout_centerInParent="true"
        android:id="@+id/txt_pin_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cursorVisible="false"
        android:digits="1234567890"
        android:inputType="number"
        android:maxLength="6"
        android:textIsSelectable="false"
        android:textSize="20sp"
        app:pinAnimationType="popIn" />

