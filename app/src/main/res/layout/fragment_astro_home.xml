                        <RelativeLayout
                            android:id="@+id/relative1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/callName"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Vijay Sharma"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:id="@+id/callTime"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/callName"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="24.30 Min."
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:id="@+id/callAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/callTime"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text=" Rs. 50"
                                android:textColor="#64DD17"
                                android:textSize="16dp">

                            </TextView>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerInParent="true"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_baseline_arrow"></ImageView>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="15dp"
                        android:thicknessRatio="1.9"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="8dp"
                        app:cardMaxElevation="8dp">

                        <RelativeLayout
                            android:id="@+id/relative2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:id="@+id/callName2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="Vijay Sharma"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:id="@+id/callTime2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/callName2"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text="24.30 Min."
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="16dp">

                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/callTime2"
                                android:fontFamily="@font/montserrat_bold"
                                android:gravity="center"
                                android:text=" Rs. 50"
                                android:textColor="#64DD17"
                                android:textSize="16dp">

                            </TextView>

                            <ImageView
